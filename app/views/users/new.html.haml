.container
  %p.alert
    You can
    = link_to sign_in_path do
      %strong Log In
    if you already have an account
.content
  .row
    .span6.offset2
      = render 'shared/errors', object: @user
  #sign-up-social.span5.offset1
    %h6 Sign Up with Social Networks
    %p
      You can Log In if you already have an account.
    = link_to "/auth/twitter", class: "btn btn-social-twitter btn-lnger" do
      %i.fui-twitter
      Sign Up with Twitter
    = link_to "/auth/facebook", class: "btn btn-social-facebook btn-lnger" do
      %i.fui-facebook
      Sign Up with Facebook
  #sign-up-email.span5.offset1
    %h6 Sign Up with Email
    = form_for @user, :url => (@user.new_record? ? users_path : user_path(@user)), html: { autocomplete: "off" } do |f|
      .form-group
        = f.text_field :first_name, class: "form-control", placeholder: "First Name"
      .form-group
        = f.text_field :last_name, class: "form-control", placeholder: "Last Name"
      .form-group
        = f.email_field :email, class: "form-control", placeholder: "Email"
      .form-group
        = f.password_field :password, class: "form-control", placeholder: "Password"
      .form-group
        = f.submit "Sign Up", class: "btn btn-default btn-wide"