.container
  %p.alert
    You can
    = link_to sign_in_path do
      %strong Log In
    if you already have an account
.content
  .row
    .span6.offset2
      - if @identity && @identity.errors.any?
        .row
          .alert.alert-error.span8
            %a.close{"data-dismiss" => "alert"} Ã—
            %ul
              - @identity.errors.full_messages.each do |msg|
                %li
                  = msg
  #sign-up-social.span5.offset1
    %h6 Sign Up with Social Networks
    %p
      You can Log In if you already have an account.
    %button.btn.btn-social-twitter.btn-lnger
      %i.fui-twitter
      Sign Up with Twitter
    %button.btn.btn-social-facebook.btn-lnger
      %i.fui-facebook
      Sign Up with Facebook
  #sign-up-email.span5.offset1
    %h6 Sign Up with Email
    = form_tag "/auth/identity/register", autocomplete: "off" do
      .form-group
        = text_field_tag :full_name, @identity.try(:full_name), class: "form-control", placeholder: "Full Name"
      .form-group
        = email_field_tag :email, @identity.try(:email), class: "form-control", placeholder: "Email"
      .form-group
        = password_field_tag :password, nil, class: "form-control", placeholder: "Password"
      .form-group
        = password_field_tag :password_confirmation, nil, class: "form-control", placeholder: "Confirm Password"
      .form-group
        %button.btn.btn-default.btn-wide Sign Up